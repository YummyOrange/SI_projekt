{% extends 'base.html.twig' %}

{% block title %}{{ 'title.record_list'|trans }}{% endblock %}

{% block body %}

    <ul class="nav">
        <li class="nav-item">
            <a class="nav-link" href="{{ path('address_index') }}">{{ "label.addresses"|trans }}</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="{{ path('tag_index') }}">{{ "label.tags"|trans }}</a>
        </li>
    </ul>

    <h1>{{ 'title.record_list'|trans }}</h1>
    <a href="{{ path('address_create') }}">{{ 'button.action_create'|trans }}</a>

    {% if pagination is defined and pagination.items|length %}
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'address.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.address_in'|trans, 'address.address_in') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.address_out'|trans, 'address.address_out') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.add_date'|trans, 'address.add_date') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.click_counter'|trans, 'address.click_counter') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.tags'|trans, 'tag.title') }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for address in pagination.items %}
                <tr>
                    <td>{{ address.id }}</td>
                    <td>{{ address.addressIn }}</td>
                    <td>{{ address.addressOut }}</td>
                    <td>{{ address.addDate|format_date('long') }}</td>
                    <td>{{ address.clickCounter }}</td>
                    <td>
                        {% for tag in address.tags %}
                            {{ tag.title }},
                        {% endfor %}
                    </td>
                    <td>

                            <a class="btn btn-outline-primary" href="{{ url('address_show', {id: address.id}) }}" title="{{ 'button.action_show'|trans }}">
                                {{ 'button.action_show'|trans }}
                            </a>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a class="btn btn-outline-success" href="{{ url('address_edit', {id: address.id}) }}" title="{{ 'button.action_edit'|trans }}">
                                {{ 'button.action_edit'|trans }}
                            </a>
                            <a class="btn btn-outline-danger" href="{{ url('address_delete', {id: address.id}) }}" title="{{ 'button.action_delete'|trans }}">
                                {{ 'button.action_delete'|trans }}
                            </a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>{{ 'message.empty_list'|trans }}</p>
    {%  endif %}

{% endblock %}